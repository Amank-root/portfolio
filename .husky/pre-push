echo "🚀 Running pre-push checks..."

# Run linting
echo "📋 Running ESLint..."
pnpm run lint

# Run type checking
echo "🔍 Running type check..."
pnpm run type-check

# Run build to ensure everything compiles correctly
echo "🔨 Running build check..."
pnpm run build

echo "✅ Pre-push checks passed! Ready to push 🎉"
